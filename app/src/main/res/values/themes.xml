<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StaticIPAddressUtility" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar color. -->
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.StaticIPAddressUtility.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StaticIPAddressUtility.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.StaticIPAddressUtility.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="Theme.Base.ButtonGeneric" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">
            @style/Button.ShapeStyle
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Button.ShapeStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeBottomLeft">9dp</item>
    </style>

</resources>